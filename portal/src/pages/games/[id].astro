---
import Layout from "../../components/Layout.astro";
import gamesData from "../../data/games.json";

export const getStaticPaths = async () => {
  return gamesData.games.map((game) => ({
    params: { id: game.id },
    props: { game },
  }));
};

const { game } = Astro.props;
---

<Layout
  title={`${game.title} | game.kihamda.net`}
  description={game.description}
  canonicalUrl={`https://game.kihamda.net/games/${game.id}/`}
  ogType="website"
>
  <article class="detail">
    <img src={game.thumbnail} alt={`${game.title} thumbnail`} />
    <h1>{game.title}</h1>
    <p>{game.description}</p>
    <p class="meta">公開日 {game.publishedAt}</p>
    <div class="actions">
      <a href={game.path}>プレイ開始</a>
      <a href="/">一覧に戻る</a>
    </div>
  </article>
</Layout>

<style>
  .detail {
    background: #fff;
    border-radius: 16px;
    box-shadow: 0 6px 20px rgba(15, 23, 42, 0.08);
    padding: 20px;
  }

  .detail img {
    width: 100%;
    max-height: 360px;
    object-fit: cover;
    border-radius: 12px;
    margin-bottom: 16px;
    background: #e2e8f0;
  }

  .detail h1 {
    margin: 0 0 8px;
  }

  .detail p {
    margin: 0 0 10px;
    color: #334155;
  }

  .meta {
    font-size: 14px;
    color: #64748b;
  }

  .actions {
    display: flex;
    gap: 12px;
  }

  .actions a {
    text-decoration: none;
    border-radius: 10px;
    padding: 8px 12px;
    font-weight: 700;
    background: #1d4ed8;
    color: #fff;
  }
</style>
